{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build 10key_console",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/10key_console/10key_console.cpp",
                "-o",
                "${workspaceFolder}/Releases/10key_macos"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "build-windows",
            "type": "shell",
            "command": "x86_64-w64-mingw32-g++",
            "args": [
                "-std=c++17",
                "-static",
                "-static-libgcc",
                "-static-libstdc++",
                "-o",
                "${workspaceFolder}/Releases/10key_windows.exe",
                "${workspaceFolder}/10key_console/10key_console.cpp",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }

    ],
    "version": "2.0.0"
}